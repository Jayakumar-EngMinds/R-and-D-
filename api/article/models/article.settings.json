      "required": true,
      "pluginOptions": {}
    },
    "show_on_home_slider": {
      "type": "boolean",
      "default": false
    },
    "show_on_dashboard": {
      "type": "boolean",
      "default": false
    },
    "date_created": {
      "type": "date"
    },
    "home_slider_picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "show_as_dashboard_main_article": {
      "type": "boolean",
      "default": false
    },
    "description_for_home_slider": {
      "type": "text"
